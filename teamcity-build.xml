<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://teamcity.jetbrains.com/app/dsl-plugins/xsd/teamcity-build-config-xsd/10.0/project-config.xsd">
  <name>Build</name>
  <description>Builds the project using Node.js</description>
  
  <settings>
    <parameters />
    
    <build-runners>
      <runner id="RUNNER_1" name="Install dependencies" type="simpleRunner">
        <parameters>
          <param name="script.content" value="yarn install --frozen-lockfile" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
          <param name="docker.image.platform" value="linux" />
          <param name="docker.image.name" value="node:18" />
          <param name="docker.pull.enabled" value="true" />
        </parameters>
      </runner>
      
      <runner id="RUNNER_2" name="Build" type="simpleRunner">
        <parameters>
          <param name="script.content" value="yarn build" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
          <param name="docker.image.platform" value="linux" />
          <param name="docker.image.name" value="node:18" />
          <param name="docker.pull.enabled" value="true" />
        </parameters>
      </runner>
    </build-runners>
    
    <vcs-settings>
      <vcs-entry-ref root-id="DevsecopsDemo_Main" />
    </vcs-settings>
    
    <requirements />
    
    <build-triggers>
      <build-trigger id="TRIGGER_1" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    
    <build-extensions />
    
    <artifact-dependencies />
    
    <dependencies />
    
    <cleanup />
  </settings>
</build-type>
